<style>
  .skill-item {
    margin-bottom: 16px;
  }

  .skill-name {
    color: #ffffff;
    font-weight: bold;
    margin-bottom: 8px;
    font-size: 14px;
  }

  .skill-bar {
    height: 12px;
    background: rgba(26, 26, 26, 0.8);
    border: 2px solid #00ffff;
    position: relative;
    overflow: hidden;
  }

  .skill-progress {
    height: 100%;
    background: linear-gradient(90deg, #00ffff, #ff00ff);
    width: 0%;
    position: relative;
    transition: width 2s ease-out;
  }

  .skill-progress::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      90deg,
      transparent,
      transparent 2px,
      rgba(255, 255, 255, 0.2) 2px,
      rgba(255, 255, 255, 0.2) 4px
    );
    animation: pixelMove 0.6s linear infinite;
    pointer-events: none;
  }

  @keyframes pixelMove {
    0% {
      transform: translateX(-4px);
    }
    100% {
      transform: translateX(0px);
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    function animateSkills() {
      const skillItems = document.querySelectorAll(".skill-progress");

      skillItems.forEach((progress, index) => {
        if (!progress.hasAttribute("data-animated")) {
          const targetWidth = progress.getAttribute("data-width");

          setTimeout(() => {
            progress.style.width = targetWidth + "%";
            progress.setAttribute("data-animated", "true");
          }, index * 200);
        }
      });
    }

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            animateSkills();
          }
        });
      },
      {
        threshold: 0.2,
        rootMargin: "0px 0px -50px 0px",
      },
    );

    // Observar la secci√≥n completa de "about"
    const aboutSection = document.getElementById("about");
    if (aboutSection) {
      observer.observe(aboutSection);
    }
  });
</script>
