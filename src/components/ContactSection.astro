<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form');
    
    form?.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const formData = new FormData(form);
      const name = formData.get('name');
      const email = formData.get('email');
      const subject = formData.get('subject');
      const message = formData.get('message');
      
      const subjectMap = {
        'proyecto': 'Nuevo Proyecto',
        'colaboracion': 'Propuesta de ColaboraciÃ³n',
        'freelance': 'Trabajo Freelance',
        'consulta': 'Consulta General'
      };
      
      const subjectText = subjectMap[subject] || 'Consulta';
      
      const emailBody = `Hola,\n\n` +
        `Mi nombre es ${name} y me pongo en contacto contigo desde tu portafolio web.\n\n` +
        `Motivo: ${subjectText}\n\n` +
        `Mensaje:\n${message}\n\n` +
        `Saludos,\n${name}\n` +
        `Email de contacto: ${email}`;
      
      const mailtoLink = `mailto:willianmaciasalmeida41@gmail.com?subject=${encodeURIComponent(`[Portafolio] ${subjectText} - ${name}`)}&body=${encodeURIComponent(emailBody)}`;
      
      const button = form.querySelector('button[type="submit"]');
      const originalText = button!.textContent;
      
      button!.textContent = 'ABRIENDO_CORREO...';
      button!.disabled = true;

      window.location.href = mailtoLink;

      setTimeout(() => {
        button!.textContent = 'CORREO_ABIERTO âœ“';
        button!.style.background = 'linear-gradient(135deg, #00ff00 0%, #00ffff 100%)';
        
        setTimeout(() => {
          button!.textContent = originalText;
          button!.disabled = false;
          button!.style.background = '';
        }, 2000);
      }, 500);
    });
  });
</script>
