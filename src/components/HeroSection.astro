<section id="hero" class="min-h-screen flex items-center justify-center relative px-2 sm:px-4 scan-lines">
  <div class="text-center max-w-4xl mx-auto w-full">
    <h1 class="text-4xl sm:text-6xl md:text-8xl font-black mb-4 sm:mb-6 animate-glow px-2">
      <span class="text-pixel-blue block sm:inline">WILLIAN</span>
      <span class="text-pixel-purple block sm:inline sm:ml-4">MACIAS</span>
    </h1>
    
    <div class="pixel-box p-4 sm:p-6 md:p-8 mb-6 sm:mb-8 fade-in mx-2 sm:mx-4">
      <h2 class="text-xl sm:text-2xl md:text-4xl mb-3 sm:mb-4 text-pixel-green glow-text">
        > DESARROLLADOR FULL-STACK
      </h2>
      <p class="text-base sm:text-lg md:text-xl text-pixel-white mb-4 sm:mb-6 px-2">
        Creando aplicaciones desde el ambito web hasta el mobile.
      </p>
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center max-w-md mx-auto">
        <a href="#projects" class="pixel-button flex-1 sm:flex-none">
          VER PROYECTOS
        </a>
        <a href="#contact" class="pixel-button flex-1 sm:flex-none">
          CONTACTAR
        </a>
      </div>
    </div>
    
    <div class="text-pixel-yellow text-lg sm:text-xl animate-bounce">
      ▼ SCROLL DOWN ▼
    </div>
  </div>
  
  <!-- Fondo animado pixelado -->
  <div class="absolute inset-0 -z-10">
    <div class="matrix-rain"></div>
  </div>
</section>

<style>
  .matrix-rain {
    background: 
      linear-gradient(90deg, transparent 98%, rgba(0, 255, 255, 0.1) 100%),
      linear-gradient(0deg, transparent 98%, rgba(255, 0, 255, 0.1) 100%);
    background-size: 50px 50px;
    animation: matrix-move 10s linear infinite;
    width: 100%;
    height: 100%;
  }
  
  @keyframes matrix-move {
    0% { background-position: 0 0; }
    100% { background-position: 50px 50px; }
  }
</style>